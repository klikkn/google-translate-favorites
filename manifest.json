{
  "manifest_version": 3,
  "name": "Google translate favorites",
  "version": "1.0",
  "description": "A minimal extension to enhance website functionality",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://translate.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
